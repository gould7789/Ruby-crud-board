<% content_for :title, "Editing post" %>

<h1>글 수정하기</h1>

<%= form_with model: @post do |f| %>
    <div style="margin-bottom: 10px;">
        <%= f.label :title, "제목" %> <br>
        <%= f.text_field :title %>
    </div>

    <div style="margin-bottom: 10px;">
        <%= f.label :content, "내용" %> <br>
        <%= f.text_area :content %>
    </div>

    <div>
        <%= f.submit "수정 완료" %>
    </div>
<% end %>

<hr>

<a href="/posts/<%= @post.id %>">취소하고 글 보기 / </a>
<a href="/posts">목록으로 돌아가기</a>