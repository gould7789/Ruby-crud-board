<%# 해당 페이지의 탭 이름을 변경 %>
<% content_for :title, "게시글 수정하기" %>

<h1>글 수정하기</h1>

<%# @post에는 이미 DB에서 찾아온 데이터(id = 1 등)가 들어있음 %>
<%# 따라서 레일즈는 자동으로 '수정 모드'로 폼을 만들고, 칸마다 기존 내용을 채워줌 %>
<%= form_with model: @post do |f| %>
    <div style="margin-bottom: 10px;">
        <%= f.label :title, "제목" %> <br>
        <%# 기존 제목이 input칸 안에 value="..."로 자동으로 들어감 %>
        <%= f.text_field :title %>
    </div>

    <div style="margin-bottom: 10px;">
        <%= f.label :content, "내용" %> <br>
        <%# 기존 내용이 textarea 안에 자동으로 들어감 %>
        <%= f.text_area :content %>
    </div>

    <div>
        <%= f.submit "수정 완료" %>
    </div>
<% end %>

<hr>

<%# 취소 및 목록으로 버튼 %>
<div class="buttons" style="display: flex; gap: 10px;">
    <%# 취소하고 글 보기 %>
    <%= link_to post_path(@post) do %>
        <button style="cursor: pointer;">취소하고 글 보기</button>
    <% end %>

    <%# 목록으로 돌아가기 %>
    <%= link_to posts_path do %>
        <button style="cursor: pointer;">목록으로 돌아가기</button>
    <% end %>
</div>